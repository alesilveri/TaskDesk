{
  "name": "taskdesk",
  "version": "1.0.1",
  "private": true,
  "description": "Registro attivita smart, local-first, per sostituire Excel nella chiusura mese.",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "preinstall": "node scripts/check-node.cjs",
    "dev": "node scripts/dev.cjs",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke": "node scripts/smoke.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier . --write"
  },
  "engines": {
    "node": ">=20 <23"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^5.5.6",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.0",
    "exceljs": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.10",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^25.0.9",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.4.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.taskdesk.app",
    "productName": "TaskDesk",
    "publish": {
      "provider": "github",
      "owner": "alesilveri",
      "repo": "TaskDesk"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "asar": true,
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png"
    }
  }
}
